    },
    {
      "src": "/icons/icon-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  
  "categories": [
    "travel",
    "transportation",
    "business",
    "lifestyle"
  ],
  
  "shortcuts": [
    {
      "name": "Ny bokning",
      "short_name": "Boka",
      "description": "Skapa en ny transportbokning",
      "url": "/booking",
      "icons": [
        {
          "src": "/icons/shortcut-booking.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mina resor",
      "short_name": "Resor",
      "description": "Visa dina bokningar och resehistorik",
      "url": "/customer",
      "icons": [
        {
          "src": "/icons/shortcut-trips.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Live tracking",
      "short_name": "Spåra",
      "description": "Spåra din pågående resa",
      "url": "/tracking",
      "icons": [
        {
          "src": "/icons/shortcut-tracking.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Förarpanel",
      "short_name": "Förare",
      "description": "Förardashboard och uppdrag",
      "url": "/driver",
      "icons": [
        {
          "src": "/icons/shortcut-driver.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Avanti startsida på desktop"
    },
    {
      "src": "/screenshots/mobile-booking.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Bokningsformulär på mobil"
    },
    {
      "src": "/screenshots/mobile-tracking.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Live tracking på mobil"
    },
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Admin dashboard på desktop"
    }
  ],
  
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=se.avanti.app",
      "id": "se.avanti.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/avanti-transport/id123456789",
      "id": "123456789"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+avanti",
      "url": "/booking?data=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf"]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "permissions": [
    "geolocation",
    "notifications",
    "background-sync",
    "camera",
    "microphone"
  ],
  
  "features": [
    "cross-origin-isolated"
  ],
  
  "serviceworker": {
    "src": "/sw.js",
    "scope": "/",
    "type": "module",
    "update_via_cache": "none"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "images/*.png",
        "offline.html"
      ],
      "matches": ["*"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-eval' https://maps.googleapis.com https://js.stripe.com; object-src 'self'"
  },
  
  "chrome_url_overrides": {
    "newtab": "/dashboard"
  },
  
  "background": {
    "service_worker": "/sw.js",
    "type": "module"
  },
  
  "custom": {
    "offline_enabled": true,
    "background_sync": true,
    "push_notifications": true,
    "location_tracking": true,
    "ai_features": true,
    "premium_features": true,
    "supported_languages": ["sv", "en"],
    "supported_regions": ["SE", "NO", "DK", "FI"],
    "minimum_chrome_version": "88",
    "minimum_safari_version": "14",
    "minimum_firefox_version": "85"
  },
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
}